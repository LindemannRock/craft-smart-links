            } else {
                Craft.cp.displayError(response.error || '{{ "Failed to clear analytics"|t('smart-links')|e('js') }}');
            }
        },
        error: function() {
            Craft.cp.displayError('{{ "Failed to clear analytics"|t('smart-links')|e('js') }}');
        },
        complete: function() {
            $btn.removeClass('loading').prop('disabled', false);
        }
    });
});
