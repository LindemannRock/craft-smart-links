{% extends "_layouts/cp" %}

{% set title = title ?? 'Settings'|t('smartlink-manager') %}
{% set docTitle =  title ~  ' - ' ~ smartlinkHelper.fullName %}
{% set selectedSettingsItem = selectedSettingsItem ?? 'general' %}
{% set selectedSubnavItem = 'settings' %}

{% set plugin = craft.app.plugins.getPlugin('smartlink-manager') %}

{% block sidebar %}
	<nav id="settings-nav">
		<ul>
			<li><a href="{{ url('smartlink-manager/settings/general') }}"{% if selectedSettingsItem == 'general' %} class="sel"{% endif %} data-nav-item="general">{{ 'General'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/qr-code') }}"{% if selectedSettingsItem == 'qr-code' %} class="sel"{% endif %} data-nav-item="qr-code">{{ 'QR Code'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/behavior') }}"{% if selectedSettingsItem == 'behavior' %} class="sel"{% endif %} data-nav-item="behavior">{{ 'Behavior'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/analytics') }}"{% if selectedSettingsItem == 'analytics' %} class="sel"{% endif %} data-nav-item="analytics">{{ 'Analytics'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/interface') }}"{% if selectedSettingsItem == 'interface' %} class="sel"{% endif %} data-nav-item="interface">{{ 'Interface'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/export') }}"{% if selectedSettingsItem == 'export' %} class="sel"{% endif %} data-nav-item="export">{{ 'Export'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/cache') }}"{% if selectedSettingsItem == 'cache' %} class="sel"{% endif %} data-nav-item="cache">{{ 'Cache'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/integrations') }}"{% if selectedSettingsItem == 'integrations' %} class="sel"{% endif %} data-nav-item="integrations">{{ 'Integrations'|t('smartlink-manager') }}</a></li>
			<li><a href="{{ url('smartlink-manager/settings/field-layout') }}"{% if selectedSettingsItem == 'field-layout' %} class="sel"{% endif %} data-nav-item="field-layout">{{ 'Field Layout'|t('smartlink-manager') }}</a></li>
		</ul>
	</nav>
{% endblock %}

{% css %}
/* Prevent scroll-based highlighting */
    #settings-nav a {
        transition: none;
    }

    /* Ensure only the current page link is highlighted */
    #settings-nav a.sel {
        cursor: default;
    }
{% endcss %}
